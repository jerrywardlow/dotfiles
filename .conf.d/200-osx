# OSX overrides
if [ $(uname) = "Darwin" ]; then
    alias ll='ls -aGhl'
    alias ls='ls -AG'
    
    # GNU grep required
    alias grepc='grep --color=always'

    # Silver Searcher
    alias ag='ag --color-line-number="0;32" --color-match="1;31" --color-path="0;35"'
    alias agg='ag -g'

    # Source bash_completion
    if [ -f $(brew --prefix)/etc/bash_completion  ]; then
      . $(brew --prefix)/etc/bash_completion
    fi

    # Remove previously set `vssh` alias
    unalias vssh

fi
