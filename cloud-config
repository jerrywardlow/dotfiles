#cloud-config
users:
  - name: jerry
    gecos: Jerry Wardlow
    groups: sudo
    sudo: ['ALL=(ALL) NOPASSWD:ALL']
    shell: /bin/bash
    lock-passwd: false
    passwd: $6$rounds=666666$lowsodium$1XgqYAxXze69CaPh6FvxU14QGvp4n/NjZ.viwnAPHK1ZB8fHg7eMwkbefcsBZOX8NmvXfmYWhgIS.fujgQhJl/
    ssh-authorized-keys:
      - ssh-rsa  Jerry@EXECUTOR

runcmd:
  - apt-get install -y fail2ban
  - apt-get install -y git
  - apt-get install -y htop
  - apt-get install -y tree
  - apt-get install -y python-pip
  - apt-get install -y vim
  - wget https://raw.githubusercontent.com/jerrywardlow/dotfiles/master/.bashrc
  - wget https://raw.githubusercontent.com/jerrywardlow/dotfiles/master/.aliases
  - wget https://raw.githubusercontent.com/jerrywardlow/dotfiles/master/.git-prompt.sh
  - wget https://raw.githubusercontent.com/jerrywardlow/dotfiles/master/.vimrc -P ~ # Pull down .vimrc from Github
  - wget https://raw.githubusercontent.com/gosukiwi/vim-atom-dark/master/colors/atom-dark-256.vim -P ~/.vim/colors/ # Adds vim color scheme
  - sed -i -e '/^PermitRootLogin/s/^.*$/PermitRootLogin no/' /etc/ssh/sshd_config
  - sed -i -e '/^PasswordAuthentication/s/^.*$/PasswordAuthentication no/' /etc/ssh/sshd_config
  - echo "\nAllowUsers jerry" >> /etc/ssh/sshd_config
  - service ssh restart
