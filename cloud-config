#cloud-config
users:
  - name: jerry
    gecos: Jerry Wardlow
    groups: sudo
    sudo: ['ALL=(ALL) NOPASSWD:ALL']
    shell: /bin/bash
    ssh-authorized-keys:
      - ssh-rsa  Jerry@EXECUTOR

package_upgrade: true
runcmd:
  - sed -i -e '/^PermitRootLogin/s/^.*$/PermitRootLogin no/' /etc/ssh/sshd_config
  - echo "\nAllowUsers jerry" >> /etc/ssh/sshd_config
  - restart ssh
